<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Merge base theme -->
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="BaseTheme.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <!-- Light colors -->
    <Color x:Key="BackgroundColor">#FFFDFDFD</Color>
    <Color x:Key="ForegroundColor">#FF1E1E1E</Color>
    <Color x:Key="AccentColor">#FF0078D7</Color>
    <Color x:Key="ControlBackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="ControlBorderColor">#FFCCCCCC</Color>

    <Color x:Key="ComboItemBackgroundColor">#FFFFFFFF</Color>
    <Color x:Key="ComboItemHoverColor">#FF0078D7</Color>
    <Color x:Key="ComboItemForegroundColor">#FF000000</Color>


    <!-- Brushes -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}" />
    <SolidColorBrush x:Key="ForegroundBrush" Color="{StaticResource ForegroundColor}" />
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
    <SolidColorBrush x:Key="ControlBackgroundBrush" Color="{StaticResource ControlBackgroundColor}" />
    <SolidColorBrush x:Key="ControlBorderBrush" Color="{StaticResource ControlBorderColor}" />
    <SolidColorBrush x:Key="ComboItemBackgroundBrush" Color="{StaticResource ComboItemBackgroundColor}" />
    <SolidColorBrush x:Key="ComboItemHoverBrush" Color="{StaticResource ComboItemHoverColor}" />
    <SolidColorBrush x:Key="ComboItemForegroundBrush" Color="{StaticResource ComboItemForegroundColor}" />

</ResourceDictionary>